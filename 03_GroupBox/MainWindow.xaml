<Window x:Class="_03_GroupBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_GroupBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox  Margin="10" VerticalAlignment="Top">
            <GroupBox.Header>
                <Button Content="Group Box"/>
            </GroupBox.Header>
            <StackPanel>
                <RadioButton Content="Radio button 1" Margin="3"/>
                <RadioButton Content="Radio button 1" Margin="3"/>
                <RadioButton Content="Radio button 1" Margin="3"/>

                <Button Width="100" HorizontalAlignment="Left" Margin="3" Padding="3">
                    Ok
                </Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
